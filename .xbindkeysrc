
##
# Monitor backlight up/down
#

"xbacklight -inc 10 -time 0 -steps 1"
  XF86MonBrightnessUp

"xbacklight -dec 10 -time 0 -steps 1"
  XF86MonBrightnessDown

##
# Toggle keyboard backlight
#

"grep -Fxq 0 /sys/class/leds/smc::kbd_backlight/brightness && kbdlight set 16 || kbdlight off"
  XF86LaunchB

##
# Toggle Redshift
#

"[ $(systemctl --user is-active redshift.service) = active ] && systemctl --user start redshift.service || systemctl --user stop redshift.service"
  XF86KbdBrightnessDown

##
# Sound controls
#

"amixer set Master toggle && pkill -RTMIN+10 i3blocks"
  XF86AudioMute

"amixer set Master 5%+ && pkill -RTMIN+10 i3blocks"
  XF86AudioRaiseVolume

"amixer set Master 5%- && pkill -RTMIN+10 i3blocks"
  XF86AudioLowerVolume

